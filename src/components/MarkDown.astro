<div class="main"><slot /></div>
<style lang="scss" is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  .main {
    @layer components {
      p {
        @apply  pt-2 pb-4;
      } 

      h1 {
        @apply text-xl text-red-900 py-2;
      }

      h2 {
        @apply text-lg text-red-900 py-2;
      }

      h3 {
        @apply text-base text-red-900 py-2;
      }

      ul {
        @apply my-3 ml-5;
      }

      li {
        @apply list-disc;
      }
    }
  }
</style>
